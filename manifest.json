{
  "manifest_version": 2,

  "name": "Group phabricator notifications",
  "description": "Groups phabricator notifications",
  "version": "1.4",

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "include_globs": [
        "*://*.phabricator.*/notification/*",
        "*://phabricator.*.*/notification/*"
      ],
      "exclude_globs": ["*://*/notification/query/edit/"],
      "js": ["index.js"]
    }
  ],

  "permissions": []
}
